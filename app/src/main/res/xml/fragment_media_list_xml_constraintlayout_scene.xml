<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="500">

        <OnClick motion:targetId="@id/sortFloatingButton" />
        <!-- For Arc Path -->
        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="50"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@id/sortAlphaFloatingButton"
                motion:percentX="0.85"
                motion:percentY="0.15" />
            <KeyPosition
                motion:framePosition="50"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@id/sortPopularityFloatingButton"
                motion:percentX="0.85"
                motion:percentY="0.15" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/sortAlphaFloatingButton">
            <Layout
                android:layout_width="@dimen/small_fab_size"
                android:layout_height="@dimen/small_fab_size"
                motion:layout_constraintBottom_toBottomOf="@id/sortFloatingButton"
                motion:layout_constraintEnd_toEndOf="@id/sortFloatingButton"
                motion:layout_constraintStart_toStartOf="@id/sortFloatingButton"
                motion:layout_constraintTop_toTopOf="@id/sortFloatingButton" />
        </Constraint>

        <Constraint android:id="@id/sortPopularityFloatingButton">
            <Layout
                android:layout_width="@dimen/small_fab_size"
                android:layout_height="@dimen/small_fab_size"
                motion:layout_constraintBottom_toBottomOf="@id/sortFloatingButton"
                motion:layout_constraintEnd_toEndOf="@id/sortFloatingButton"
                motion:layout_constraintStart_toStartOf="@id/sortFloatingButton"
                motion:layout_constraintTop_toTopOf="@id/sortFloatingButton" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end"
        motion:deriveConstraintsFrom="@id/start">

        <Constraint android:id="@id/sortAlphaFloatingButton">
            <Layout
                android:layout_width="@dimen/normal_fab_size"
                android:layout_height="@dimen/normal_fab_size"
                android:layout_marginTop="@dimen/small_dim"
                android:layout_marginEnd="@dimen/basic_dim"
                motion:layout_constraintEnd_toStartOf="@id/sortFloatingButton"
                motion:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint android:id="@id/sortPopularityFloatingButton">
            <Layout
                android:layout_width="@dimen/normal_fab_size"
                android:layout_height="@dimen/normal_fab_size"
                android:layout_marginStart="@dimen/basic_dim"
                android:layout_marginTop="@dimen/small_dim"
                android:layout_marginEnd="@dimen/basic_dim"
                motion:layout_constraintEnd_toStartOf="@id/sortAlphaFloatingButton"
                motion:layout_constraintTop_toTopOf="parent" />
        </Constraint>
    </ConstraintSet>
</MotionScene>