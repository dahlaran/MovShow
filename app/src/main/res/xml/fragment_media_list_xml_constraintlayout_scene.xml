    <ConstraintSet
        android:id="@+id/end"
        motion:deriveConstraintsFrom="@id/start">

        <Constraint android:id="@id/sortAlphaFloatingButton">
            <Layout
                android:layout_width="@dimen/normal_fab_size"
                android:layout_height="@dimen/normal_fab_size"
                android:layout_marginTop="@dimen/small_dim"
                android:layout_marginEnd="@dimen/basic_dim"
                motion:layout_constraintEnd_toStartOf="@id/sortFloatingButton"
                motion:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint android:id="@id/sortPopularityFloatingButton">
            <Layout
                android:layout_width="@dimen/normal_fab_size"
                android:layout_height="@dimen/normal_fab_size"
                android:layout_marginStart="@dimen/basic_dim"
                android:layout_marginTop="@dimen/small_dim"
                android:layout_marginEnd="@dimen/basic_dim"
