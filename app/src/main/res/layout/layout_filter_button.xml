<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motionLayoutSort"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="1dp"
        app:layoutDescription="@xml/fragment_media_list_xml_constraintlayout_scene">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sortAlphaFloatingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="alphabetical sorting button"
            android:src="@android:drawable/ic_menu_sort_alphabetically"
            app:fabSize="mini"
            app:layout_constraintBottom_toBottomOf="@id/sortFloatingButton"
            app:layout_constraintEnd_toEndOf="@id/sortFloatingButton"
            app:layout_constraintStart_toStartOf="@id/sortFloatingButton"
            app:layout_constraintTop_toTopOf="@id/sortFloatingButton" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sortRatingFloatingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="rating sorting button"
            android:src="@android:drawable/btn_star_big_on"
            app:fabSize="mini"
            app:layout_constraintBottom_toBottomOf="@id/sortFloatingButton"
            app:layout_constraintEnd_toEndOf="@id/sortFloatingButton"
            app:layout_constraintStart_toStartOf="@id/sortFloatingButton"
            app:layout_constraintTop_toTopOf="@id/sortFloatingButton" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sortFloatingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/big_dim"
            android:layout_marginBottom="@dimen/big_dim"
            android:contentDescription="main sorting button"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.motion.widget.MotionLayout>
</androidx.constraintlayout.widget.ConstraintLayout>